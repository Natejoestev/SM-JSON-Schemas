{
  "$id": "./decalSet.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "decalSet",
  "description": "",
  "type": "object",
  "properties": {
    "difSheet": { "$ref": "./smPath.json" },
    "norSheet": { "$ref": "./smPath.json" },
    "agsSheet": { "$ref": "./smPath.json" },
    "decalSet": {
      "patternProperties": {
        "^.*$": {
          "uuid": { "$ref": "./uuid.json" },
          "region": { "type": "array", "items": { "type": "integer" } },
          "material": {
            "enum": [
              "Dif",
              "DifNor",
              "DifAgs",
              "DifNorAgs",
              "DifAgsNor",
              "NorAgs",
              "Ags"
            ]
          }
        }
      }
    }
  }
}
