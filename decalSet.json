{
  "$id": "./decalSet.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "decalSet",
  "description": "A List of decals to be placed in the tile editor.\nthey overlay a texture onto whatever their placed.",
  "type": "object",
  "properties": {
    "difSheet": { "$ref": "./smPath.json" },
    "norSheet": { "$ref": "./smPath.json" },
    "agsSheet": { "$ref": "./smPath.json" },
    "decalSet": {
      "patternProperties": {
        "^.*$": {
          "uuid": { "$ref": "./uuid.json" },
          "region": {
            "type": "array",
            "description": "coordinate of the texture to use for the decal",
            "items": { "type": "integer" },
            "minItems": 4,
            "maxItems": 4
          },
          "material": { "$ref": "./textureMaterial.json" }
        }
      }
    }
  }
}
