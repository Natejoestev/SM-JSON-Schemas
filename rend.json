{
  "$id": "./rend.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Vec3",
  "description": "",
  "type": "object",
  "properties": {
    "lodList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "maxViewDistance": { "type": "number" },
          "mesh": { "type": "string" },
          "includes": {
            "type": "array",
            "items": {
              "enum": [
                "POSITION",
                "NORMAL",
                "UV0",
                "VERTEX_COLOR",
                "TANGENT",
                "UV1",
                "TANGENTS",
                "BLEND_INDICES",
                "BLEND_WEIGHTS"
              ]
            }
          },
          "subMeshList": {
            "type": "array",
            "items": { "$ref": "./subMesh.json" }
          },
          "subMeshMap": {
            "type": "object",
            "patternProperties": {
              "^.*$": { "$ref": "./subMesh.json" }
            }
          },
          "animationList": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string" },
                "file": { "$ref": "./smPath.json" },
                "looping": { "type": "boolean" }
              }
            }
          }
        }
      }
    }
  }
}
