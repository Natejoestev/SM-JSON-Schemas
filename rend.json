{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/rend.json",
  "title": "Vec3",
  "description": "",
  "type": "object",
  "properties": {
    "lodList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "maxViewDistance": { "type": "integer" },
          "mesh": { "type": "string" },
          "includes": {
            "type": "array",
            "items": {
              "enum": [
                "POSITION",
                "NORMAL",
                "UV0",
                "VERTEX_COLOR",
                "TANGENT",
                "UV1",
                "TANGENTS"
              ]
            }
          },
          "subMeshList": {
            "type": "array",
            "items": {
              "custom": { "type": "object" },
              "material": { "type": "string" }
            }
          },
          "subMeshMap": {
            "type": "object",
            "patternProperties": {
              "^.*$": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "material": { "type": "string" },
                  "textureList": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "custom": { "type": "object" }
                }
              }
            }
          }
        }
      }
    }
  }
}
