{
  "$id": "./effectParams.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "effectParams",
  "description": "Paramaters for an Effect",
  "oneOf": [
    { "type": "array", "items": { "type": "string" } },
    {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition": {
                "enum": ["greater", "equal", "less"]
              },
              "value": { "type": "number" },
              "name": { "type": "string" },
              "parameters": {
                "$ref": "#"
              }
            }
          }
        }
      }
    }
  ]
}
