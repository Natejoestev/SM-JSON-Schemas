{
  "$id": "./subMesh.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "subMesh",
  "description": "SubMesh for a model",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "textureList": {
      "type": "array",
      "description": "list of all the textures used in this subMesh, the order is described in (material)",
      "items": { "$ref": "./smPath.json" }
    },
    "material": { "$ref": "./textureMaterial.json" },
    "custom": { "type": "object" },
    "idx": { "type": "integer" }
  },
  "patternProperties": {
    "^pose[0-9]*$": {
      "type": "string"
    }
  }
}
