{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/harvestableSet.json",
  "title": "harvestableSet",
  "description": "",
  "type": "object",
  "properties": {
    "harvestableList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
          },
          "name": { "type": "string" },
          "showInEditor": { "type": "boolean" },
          "removable": { "type": "boolean" },
          "disableClutter": { "type": "boolean" },
          "destroyTime": { "type": "number" },
          "type": { "enum": ["filler", "logfiles", "farm", "mature"] },
          "slope": { "enum": ["rotate"] },
          "col": { "type": "string" },
          "size": { "type": "integer" },
          "color": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^(?:[0-9a-fA-F]{2}){3,4}$"
                }
              },
              { "type": "string", "pattern": "^(?:[0-9a-fA-F]{2}){3,4}$" }
            ]
          },
          "physics": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "mass": { "type": "integer" },
              "material": { "enum": ["Wood", "Plastic", "Rock", "Grass"] }
            }
          },
          "mass": { "type": "integer" },
          "material": { "enum": ["Wood", "Plastic", "Rock", "Grass"] },
          "script": {
            "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/oldScriptFormat.json"
          },
          "renderable": {
            "oneOf": [
              { "type": "string" },
              {
                "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/rend.json"
              }
            ]
          },
          "collides": {
            "character": { "type": "boolean" },
            "body": { "type": "boolean" },
            "projectile": { "type": "boolean" },
            "melee": { "type": "boolean" }
          }
        }
      }
    }
  }
}
