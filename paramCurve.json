{
  "$id": "./paramCurve.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "ParamCurve",
  "description": "",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "loop": { "type": "number" },
    "speed": { "type": "number" },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "time": { "type": "number" },
          "value": {
            "oneOf": [
              {
                "type": "array",
                "items": { "type": "number" }
              },
              { "type": "number" }
            ]
          },
          "easing": {
            "enum": [
              "easeInQuad",
              "easeOutQuad",
              "easeOutElastic",
              "easeInElastic",
              "easeInBack",
              "easeOutBack"
            ]
          }
        }
      }
    }
  }
}
