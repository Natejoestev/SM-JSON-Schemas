{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/effectSet.json",
  "title": "effectSet",
  "description": "",
  "type": "object",
  "patternProperties": {
    "^(?!\\$schema$).*": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "parameterList": { "type": "object" },
        "maxInstances": { "type": "number" },
        "parameterCurves": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "2dOffset": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "loop": { "type": "number" },
                "speed": { "type": "number" },
                "timeline": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "time": { "type": "number" },
                    "value": {
                      "type": "array",
                      "items": { "type": "number" }
                    },
                    "easing": {
                      "enum": ["easeInQuad", "easeOutQuad"]
                    }
                  }
                }
              }
            }
          }
        },
        "effectList": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "enum": [
                  "audio",
                  "cameraTrack",
                  "particle",
                  "pointLight",
                  "renderable",
                  "cameraShake",
                  "shapeRenderable",
                  "customizationRenderable",
                  "pointLight",
                  "luaEvent",
                  "spotLight",
                  "ambientLight",
                  "text"
                ]
              },
              "name": { "type": "string" },
              "offset": {
                "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/vec3.json"
              },
              "direction": {
                "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/vec3.json"
              },
              "attached": { "type": "boolean" },
              "delay": { "type": "number" },
              "duration": { "type": "number" },
              "parameters": {
                "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/effectParams.json"
              },
              "cameraTrack": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "FOV": { "type": "number" },
                    "duration": { "type": "number" },
                    "easing": {
                      "enum": ["linear", "easeInOutQuad", "easeInOutCirc"]
                    },
                    "jumpCut": { "type": "boolean" },
                    "label": { "type": "string" },
                    "overrideFOV": { "type": "boolean" },
                    "position": {
                      "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/vec3Array.json"
                    },
                    "rotation": {
                      "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/vec3Array.json"
                    },
                    "tangents": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "position": {
                            "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/vec3Array.json"
                          },
                          "rotation": {
                            "$ref": "https://raw.githubusercontent.com/Tofixrs/SM-JSON-Schemas/master/vec3Array.json"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "event": { "type": "string" },
              "audio": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  }
}
